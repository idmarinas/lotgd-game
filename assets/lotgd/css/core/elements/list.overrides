/*******************************
         Theme Overrides
*******************************/


ul.ui.list.commentary li,
ol.ui.list.commentary li,
.ui.list.commentary > .item,
.ui.list.commentary .list > .item
{
    padding: 0;
}

//-- Format for description list
dt
{
    float: left;
    clear: left;
    width: 10em;
    text-align: right;
    font-weight: bold;
    color: @green;

    &::after
    {
        content: ":";
    }
}

dd
{
    margin: 0 0 0 10.5em;
    padding: 0 0 0.5em 0;
}
