/**
 * LoTGD
 * With this file you can change theme of game.
 * Only need create one and them change for each component.
 */

/*******************************
    Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'jade';
@reset      : 'jade';

/* Elements */
@button     : 'jade';
@container  : 'jade';
@divider    : 'jade';
@emoji      : 'jade';
@flag       : 'jade';
@header     : 'jade';
@icon       : 'jade';
@image      : 'jade';
@input      : 'jade';
@label      : 'jade';
@list       : 'jade';
@loader     : 'jade';
@placeholder: 'jade';
@rail       : 'jade';
@reveal     : 'jade';
@segment    : 'jade';
@step       : 'jade';
@text       : 'jade';

/* Collections */
@breadcrumb : 'jade';
@form       : 'jade';
@grid       : 'jade';
@menu       : 'jade';
@message    : 'jade';
@table      : 'jade';

/* Modules */
@accordion  : 'jade';
@calendar   : 'jade';
@checkbox   : 'jade';
@dimmer     : 'jade';
@dropdown   : 'jade';
@embed      : 'jade';
@modal      : 'jade';
@nag        : 'jade';
@popup      : 'jade';
@progress   : 'jade';
@slider     : 'jade';
@rating     : 'jade';
@search     : 'jade';
@shape      : 'jade';
@sidebar    : 'jade';
@sticky     : 'jade';
@tab        : 'jade';
@toast      : 'jade';
@transition : 'jade';

/* Views */
@ad         : 'jade';
@card       : 'jade';
@comment    : 'jade';
@feed       : 'jade';
@item       : 'jade';
@statistic  : 'jade';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'src';

/* Path to site override folder */
@siteFolder  : 'site';


/*******************************
         Import Theme
*******************************/

@import (multiple) "theme.less";

/* End Config */
