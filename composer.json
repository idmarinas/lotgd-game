{
    "name": "idmarinas/lotgd",
    "description": "A new version of The Legend of the Green Dragon, upgrade scripts and optimization, LoTGD Core is a Symfony Application",
    "license": "CC-BY-NC-SA-2.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.3",
        "ext-bcmath": "*",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-exif": "*",
        "ext-gd": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-session": "*",
        "composer/package-versions-deprecated": "1.11.99.1",
        "idmarinas/admin-bundle": "*@dev",
        "idmarinas/companion-bundle": "*@dev",
        "idmarinas/core-bundle": "*@dev",
        "idmarinas/creature-bundle": "*@dev",
        "idmarinas/lotgd-contracts": "^0.1.0",
        "idmarinas/settings-bundle": "*@dev",
        "idmarinas/ui-bundle": "*@dev",
        "idmarinas/user-bundle": "*@dev",
        "phpdocumentor/reflection-docblock": "^5.2",
        "sensio/framework-extra-bundle": "^5.1",
        "symfony/asset": "4.4.*",
        "symfony/console": "4.4.*",
        "symfony/dotenv": "4.4.*",
        "symfony/expression-language": "4.4.*",
        "symfony/flex": "^1.3.1",
        "symfony/form": "4.4.*",
        "symfony/framework-bundle": "4.4.*",
        "symfony/intl": "4.4.*",
        "symfony/mailer": "4.4.*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/process": "4.4.*",
        "symfony/property-access": "4.4.*",
        "symfony/property-info": "4.4.*",
        "symfony/proxy-manager-bridge": "4.4.*",
        "symfony/security-bundle": "4.4.*",
        "symfony/serializer": "4.4.*",
        "symfony/translation": "4.4.*",
        "symfony/twig-bundle": "^4.4",
        "symfony/validator": "4.4.*",
        "symfony/web-link": "4.4.*",
        "symfony/yaml": "4.4.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/string-extra": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "symfony/apache-pack": "^1.0",
        "symfony/browser-kit": "^4.4",
        "symfony/css-selector": "^4.4",
        "symfony/debug-bundle": "^4.4",
        "symfony/maker-bundle": "^1.0",
        "symfony/phpunit-bridge": "^5.2",
        "symfony/stopwatch": "^4.4",
        "symfony/var-dumper": "^4.4",
        "symfony/web-profiler-bundle": "^4.4"
    },
    "suggest": {
        "idmarinas/advertising-bundle": "AdvertisingBundle if you want add Adsense Network Ads to your server. Can create custom networks."
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "process-timeout": 5000,
        "sort-packages": true,
        "platform": {
            "php": "7.3.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Lotgd\\Bundle\\": "src/Bundle/"
        },
        "exclude-from-classmap": [
            "src/ajax/",
            "src/core/",
            "src/local/"
        ],
        "classmap": [
            "src/Kernel.php"
        ],
		"files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Lotgd\\Bundle\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "lotgd:prod:install": [
            "composer install --no-dev --no-interaction --no-plugins --no-scripts",
            "composer dump-env prod",
            "php bin/console cache:clear"
        ],
        "test": "php bin/phpunit --process-isolation"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "authors": [
        {
            "name": "Iv√°n Diaz Marinas",
            "email": "contacto@infommo.es",
            "homepage": "https://github.com/idmarinas/lotgd-game",
            "role": "Contributor, Developer, Maintainer"
        },
        {
            "name": "Oliver Brendel",
            "homepage": "http://nb-core.org",
            "role": "Contributor"
        },
        {
            "name": "DragonPrime",
            "homepage": "http://www.dragonprime.net",
            "role": "Developer"
        },
        {
            "name": "Eric Stevens & JT Traub (MightyE)",
            "homepage": "http://lotgd.net/",
            "role": "Author, Developer"
        }
    ],
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    },
    "funding": [
        {
            "type": "paypal",
            "url": "https://www.paypal.me/idmarinas"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "src/Bundle/*"
        }
    ]
}
