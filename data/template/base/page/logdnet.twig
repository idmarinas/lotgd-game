<table class="ui very compact striped selected table">
    <thead>
        <tr>
            <th>{{ 'servers.server'|t }}</th>
            <th>{{ 'servers.version'|t }}</th>
        </tr>
    </thead>
    <tbody>
        {% for server in servers %}
            <tr>
                <td>
                    <a class="colDkWhite" href="{{ server.address|escape('html_attr') }}" target="_blank" rel="noopener noreferrer">
                        {% if server.description %}
                            {{ server.description|escape('html')|colorize }}
                        {% else %}
                            {{ 'servers.noDescription'|t|colorize }}
                        {% endif %}
                    </a>
                </td>
                <td class="collapsing">
                    <span class="colLtYellow">{{ server.version|colorize }}</span>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'servers.notFound'|t|colorize }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
