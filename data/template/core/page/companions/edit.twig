<script>
    $(document).ready(function ()
    {
        if ($('#companions_abilities_defend').prop('checked'))
        {
            $('#companions_abilities_fighter').prop('disabled', true)
            $('#companions_abilities_fighter').prop('checked', false)
        }
        else
        {
            $('#companions_abilities_fighter').prop('disabled', false)
        }

        if ($('#companions_abilities_fighter').prop('checked'))
        {
            $('#companions_abilities_defend').prop('disabled', true)
            $('#companions_abilities_defend').prop('checked', false)
        }
        else
        {
            $('#companions_abilities_defend').prop('disabled', false)
        }
    })

    $('#companions_abilities_defend').on('change', function ()
    {
        if ($('#companions_abilities_defend').prop('checked'))
        {
            $('#companions_abilities_fighter').prop('disabled', true)
            $('#companions_abilities_fighter').prop('checked', false)
        }
        else
        {
            $('#companions_abilities_fighter').prop('disabled', false)
        }
    })

    $('#companions_abilities_fighter').on('change', function ()
    {
        if ($('#companions_abilities_fighter').prop('checked'))
        {
            $('#companions_abilities_defend').prop('disabled', true)
            $('#companions_abilities_defend').prop('checked', false)
        }
        else
        {
            $('#companions_abilities_defend').prop('disabled', false)
        }
    })
</script>
