{% translate_default_domain 'page-donators' %}

<table class="ui very compact striped selectable table">
    <thead>
        <tr>
            <th>{{ 'section.default.table.thead.name'|t|uncolorize }}</th>
            <th>{{ 'section.default.table.thead.points'|t|uncolorize }}</th>
            <th>{{ 'section.default.table.thead.spent'|t|uncolorize }}</th>
        </tr>
    </thead>
    <tbody>
        {% for donation in paginator %}
            <tr>
                <td>{{ donation.name|colorize }}</td>
                <td>{{ '`@%s`0'|format(donation.donation|numeral)|colorize }}</td>
                <td>{{ '`%%%s`0'|format(donation.donationspent|numeral)|colorize }}</td>
            </tr>
        {% else %}
            <tr>
                <td class="center aligned" colspan="3">{{ 'section.default.table.tbody.no.found'|t|colorize }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ navigation_pagination(paginator, 'donators.php' ) }}
