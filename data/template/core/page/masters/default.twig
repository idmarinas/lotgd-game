{% translate_default_domain textDomain %}

{% set options = {'text': 'section.default.table.tbody.confirm.del'|t|uncolorize }|json_encode %}
<table class="ui very compact striped table">
    <thead>
        <tr>
            <th>{{ 'section.default.table.thead.ops'|t|uncolorize }}</th>
            <th>{{ 'section.default.table.thead.level'|t|uncolorize }}</th>
            <th>{{ 'section.default.table.thead.name'|t|uncolorize }}</th>
            <th>{{ 'section.default.table.thead.weapon'|t|uncolorize }}</th>
            <th>{{ 'section.default.table.thead.win'|t|uncolorize }}</th>
            <th>{{ 'section.default.table.thead.lose'|t|uncolorize }}</th>
        </tr>
    </thead>
    <tbody>
        {% for master in masters %}
            <tr>
                <td>
                    <div class="ui small buttons">
                        <a data-tooltip="{{ 'section.default.table.tbody.edit'|t|uncolorize }}" href="{{ ('masters.php?op=edit&master_id=' ~ master.creatureid)|lotgd_url }}" class="ui icon button"><i class="edit icon"></i></a>
                        <a data-tooltip="{{ 'section.default.table.tbody.del'|t|uncolorize }}" href="{{ ('masters.php?op=del&master_id=' ~ master.creatureid)|lotgd_url }}" class="ui red icon button" onclick="Lotgd.confirm(this, event)" data-options="{{ options|e('html_attr') }}">
                            <i class="trash icon"></i>
                        </a>
                    </div>
                </td>
                <td>{{ '`%%%s`0'|format(master.creaturelevel)|colorize }}</td>
                <td>{{ '`#%s`0'|format(master.creaturename)|colorize }}</td>
                <td>{{ '`!%s`0'|format(master.creatureweapon)|colorize }}</td>
                <td>{{ '`&%s`0'|format(master.creaturelose)|colorize }}</td>
                <td>{{ '`^%s`0'|format(master.creaturewin)|colorize }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'section.default.table.tbody.not.found'|t|colorize }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ 'section.default.paragraph'|t|colorize }}
