        <label for="mountlocation">{{ 'section.edit.form.label.mountlocation'|t|colorize }}</label>
        <select class="ui lotgd dropdown" name="mount[mountlocation]" id="mountlocation">
            {% for loc, name in stableLocs %}
                <option value="{{ loc }}" {{ loc == mount.mountlocation ? 'selected' : '' }} >{{ name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="field">
