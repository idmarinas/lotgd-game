{% translate_default_domain textDomain %}

<form action="{{ ('mounts.php?op=save&id=' ~ mount.mountid)|lotgd_url }}" method="POST" class="ui form">
    <div class="field">
        <label for="mountactive">{{ 'section.edit.form.label.mountactive'|t|colorize }}</label>
        <div class="ui lotgd toggle checkbox">
            <input type="checkbox" name="mount[mountactive]" id="mountactive" value="1" {{ mount.mountactive ? 'checked' : '' }}>
        </div>
    </div>
    <div class="field">
        <label for="mountname">{{ 'section.edit.form.label.mountname'|t|colorize }}</label>
        <input type="text" name="mount[mountname]" id="mountname" value="{{ mount.mountname }}">
    </div>
