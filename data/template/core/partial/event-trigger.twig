{% translate_default_domain textDomain %}

<table class="ui small very compact striped table">
    <thead>
        <tr>
            <th>{{ 'table.thead.name'|t|uncolorize }}</th>
            <th>{{ 'table.thead.rchance'|t|uncolorize }}</th>
            <th>{{ 'table.thead.nchance'|t|uncolorize }}</th>
        </tr>
    </thead>
    <tbody>
        {% for event in events %}
            <tr>
                <td>
                    <a href="{{ ( script ~ '?eventhandler=module-' ~ event.modulename)|lotgd_url }}">{{ event.modulename }}</a>
                </td>
                <td>{{ event.rawchance|numeral }}%</td>
                <td>{{ event.normchance|numeral }}%</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
