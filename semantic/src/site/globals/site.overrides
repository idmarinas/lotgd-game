/**
 * Style for blockquote
 */

blockquote
{
    border-left: 5px solid rgba(255, 255, 255, 0.25);
    padding: 0em 1em;
    margin: 1em 0em 2em;
    text-align: justify;

    p
    {
        line-height: inherit;
    }

    .author
    {
        display: block;
        margin: 1em 0em 0em 1em;
        font-weight: bold;
        text-align: unset;
    }

    &:last-child
    {
        margin-bottom: 0;
    }
}
