/**
 * Remove margin (left, top, right, bottom) of a element
 */
[class*="remove margin left"],
[class*="remove margin"]:not([class*="remove margin left"]):not([class*="remove margin top"]):not([class*="remove margin right"]):not([class*="removemargin bottom"])
{
    margin-left: 0px !important;
}
[class*="remove margin top"],
[class*="remove margin"]:not([class*="remove margin left"]):not([class*="remove margin top"]):not([class*="remove margin right"]):not([class*="removemargin bottom"])
{
    margin-top: 0px !important;
}
[class*="remove margin right"],
[class*="remove margin"]:not([class*="remove margin left"]):not([class*="remove margin top"]):not([class*="remove margin right"]):not([class*="removemargin bottom"])
{
    margin-right: 0px !important;
}
[class*="remove margin bottom"],
[class*="remove margin"]:not([class*="remove margin left"]):not([class*="remove margin top"]):not([class*="remove margin right"]):not([class*="removemargin bottom"])
{
    margin-bottom: 0px !important;
}

