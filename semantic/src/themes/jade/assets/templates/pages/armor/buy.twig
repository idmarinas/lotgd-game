{#
    Data avaible in this template

    [
        'texts' => [
            'title' => string
            'desc' => string|array
            'tradein' => string|array
            'nosucharmor' => string|array
            'tryagain' => string
            'notenoughgold' => string|array
            'payarmor' => string|array
        ]
        (Schemas is used for translations purpose)
        'schemas' => [
            'title' => string
            'desc' => string
            'tradein' => string
            'nosucharmor' => string
            'tryagain' => string
            'notenoughgold' => string
            'payarmor' => string
        ]
        'armor' => false|array (It contains all the information of the armor, and also the name of the old armor.)
        'purchased' => boolean
    ]
 #}
{% if armor %}
    {% if purchased %}
        {% for text in texts.payarmor %}
            {{ text|t(schemas.payarmor)|colorize }}
        {% else %}
            {{ texts.payarmor|t(schemas.payarmor)|format(armor.old, armor.armorname, armor.armorname)|colorize }}
        {% endfor %}
    {% else %}
        {# Not have gold #}
        {% for text in texts.notenoughgold %}
            {{ text|t(schemas.notenoughgold)|colorize }}
        {% else %}
            {{ texts.notenoughgold|t(schemas.notenoughgold)|format(armor.armorname)|colorize }}
        {% endfor %}
    {% endif %}
{% else %}
    {# Not find armor #}
    {% for text in texts.nosucharmor %}
        {{ text|t(schemas.nosucharmor)|colorize }}
    {% else %}
        {{ texts.nosucharmor|t(schemas.nosucharmor)|colorize }}
    {% endfor %}
{% endif %}
