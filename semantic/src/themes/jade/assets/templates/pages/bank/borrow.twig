{% if user.goldinbank >= 0 %}
    {% for text in texts.borrow.desc.balance %}
        {{ text|t(schemas.borrow.desc.balance)|colorize }}
    {% else %}
        {{ texts.borrow.desc.balance|t(schemas.borrow.desc.balance)|colorize }}
    {% endfor %}
{% else %}
    {% for text in texts.borrow.desc.debt %}
        {{ text|t(schemas.borrow.desc.debt)|colorize }}
    {% else %}
        {{ texts.borrow.desc.debt|t(schemas.borrow.desc.debt)|colorize }}
    {% endfor %}
{% endif %}

<form action="{{ 'bank.php?op=withdrawfinish'|lotgd_url }}" method="POST">
    {{ texts.borrow.question|t|colorize }}
    <div class='ui action input'>
        <input id="input" name="amount" width="5" >
        <button type="submit" class="ui button">{{ texts.borrow.button|t }}</button>
    </div>
    {{ texts.borrow.help|t|colorize }}
</form>
