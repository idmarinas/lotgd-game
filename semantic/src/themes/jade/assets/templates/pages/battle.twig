{{ '`$`c`b~ ~ ~ Fight ~ ~ ~`b`c`0'|t }}
<br><br>
{# Information when encounter criature/s #}
{% for text in encounter %}
    {{ text|t }}
{% endfor %}

{# Show HP of combatants #}
{% for enemy in battlebars.start.enemies %}
    {% include 'jade/templates/pages/battle/combathealthbar.twig' with enemy %}
{% endfor %}
{% include 'jade/templates/pages/battle/combathealthbar.twig' with battlebars.start.player %}
{% for companion in battlebars.start.companions %}
    {% include 'jade/templates/pages/battle/combathealthbar.twig' with companion %}
{% endfor %}

{# Information when battle start #}
{% for msg in battlestart %}
    {{ msg|t }}
{% endfor %}

{# Rounds results #}
{% if battlerounds|length %}
    <h5 class="ui top attached header">{{ '`2Result of the `i%s`i rounds`0'|t|format(battlerounds|length) }}</h5>
    <div class="ui {% if not battleend %}bottom{% endif %} attached divided segment">
        <div class="ui divided list">
            {% for rounds in battlerounds %}
                <div class="item">
                    <div class="ui divided stackable two column grid">
                        <div class="column">
                            {% for allied in rounds.allied %}
                                {{ allied|t }}
                            {% endfor %}
                        </div>
                        <div class="column">
                            {% for enemy in rounds.enemy %}
                                {{ enemy|t }}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% else %}

{% endif %}
{# Information of end of battle #}
{% if battleend %}
    <h5 class="ui attached header">{{ '`2End of Battle`0'|t }}</h5>
    <div class="ui bottom attached divided segment">
        {% for msg in battleend %}
            {{ msg|t }}
        {% endfor %}
    </div>
{% endif %}

{# Show HP of combatants #}
{% for enemy in battlebars.end.enemies %}
    {% include 'jade/templates/pages/battle/combathealthbar.twig' with enemy %}
{% endfor %}
{% if battlebars.end.player %}{% include 'jade/templates/pages/battle/combathealthbar.twig' with battlebars.end.player %}{% endif %}
{% for companion in battlebars.end.companions %}
    {% include 'jade/templates/pages/battle/combathealthbar.twig' with companion %}
{% endfor %}
