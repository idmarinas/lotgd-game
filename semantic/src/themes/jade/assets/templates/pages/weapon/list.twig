<table class='ui very compact striped selectable table'>
    <thead>
        <tr>
            <th>{{ 'Name'|t }}</th>
            <th>{{ 'Damage'|t }}</th>
            <th>{{ 'Cost'|t }}</th>
        </tr>
    </thead>
    <tbody>
        {% for row in content %}
            {% set row = modulehook('modify-weapon', row) %}
            {% if not row.skip %}
                <tr>
                    <td class="collapsing">
                        {% set color = '`)' %}
                        {% if row.value <= (user.gold + tradeinvalue) %}
                            {% if not unavailable %}
                                {% set color = '`&' %}
                                <a href='{{ ('weapons.php?op=buy&id=' ~ row.weaponid)|lotgd_url }}'>{{ (color ~ row.weaponname ~ '`0')|colorize }}</a>
                            {% else %}
                                {% set color = '`7' %}
                                {{ (color ~ row.weaponname ~ '`0')|colorize }}
                            {% endif %}
                        {% else %}
                            {{ (color ~ row.weaponname ~ '`0')|colorize }}
                        {% endif %}
                    </td>
                    <td>{{ (color ~ row.damage)|colorize }}</td>
                    <td>
                        {% if row.alternatetext %}
                            {{ (color ~ row.alternatetext)|colorize }}
                        {% else %}
                            {{ (color ~ row.value)|colorize }}
                        {% endif %}
                    </td>
                </tr>
            {% endif %}
        {% else %}
            <tr><td colspan="3">{{ 'Not found any weapon'|t }}</td></tr>
        {% endfor %}
    </tbody>
</table>
