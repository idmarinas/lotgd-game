/*--------------
   Selectable
---------------*/
.ui.selectable.table tbody tr:hover,
.ui.table tbody tr td.selectable:hover
{
  	box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5) inset;
}

/*---------
   Centered
-----------*/
.ui.centered.table
{
	margin-left: auto;
	margin-right: auto;
}

/*-----------------
 Additional class
------------------*/
.ui.table.transparent
{
	background: transparent;
}
.ui.table.simple
{
	background: transparent;
	border: none;
	border-radius: 0;
}