{% block layout_header %}
    <table class="lotgd table">
        <tr>
            <td class="middle aligned lotgd-text-nowrap">
                <table class="lotgd table">
                    <tr>
                        <td class="border tlc"></td>
                        <td class="border tm"></td>
                        <td class="border trc"></td>
                    </tr>
                    <tr>
                        <td class="border tlt"></td>
                        <td class="lotgd-text-nowrap"><span class='pagetitle'>&#149; {{ block('lotgd_head_title') }}</span></td>
                        <td class="border trt"></td>
                    </tr>
                    <tr>
                        <td class="border blc"></td>
                        <td class="border btm"></td>
                        <td class="border brc"></td>
                    </tr>
                </table>
            </td>
            <td class="top aligned right aligned"><img src="{{ asset('build/lotgd/images/logo.jpg', 'lotgd') }}" width="465" height="71" alt="The Legend of the Green Dragon Logo"></td>
        </tr>
        <tr>
            <td class="right aligned bottom aligned">
            {#
                {{ message_of_the_day() }} |
                {{ ye_olde_mail() }} |
                {{ user_petition() }}
                {{ admin_petition() }}
            #}
            </td>
        </tr>
    </table>
{% endblock layout_header %}

{% block layout_footer %}
    <table class="lotgd table">
        <tr>
            <td class="border tlc"></td>
            <td class="border tm"></td>
            <td class="border trc"></td>
        </tr>
        <tr>
            <td class="border tlt"></td>
            <td class="top aligned">
                <table class="lotgd table">
                    <tr>
                        <td class="top aligned">{{ game_copyright() }} <br> Design: Jade Template &copy; Josh Canning 2004 of <a href='http://hfs.cjb.net/' target="_blank" rel="noopener noreferrer">HFS</a></td>
                        <td class="top aligned right aligned collapsing">
                            <a href="{{ path('lotgd_core_about_license') }}">{{ 'core.menu.license'|trans({}, 'lotgd_core_navigation') }}</a> -
                            {# Render source button modal #}
                            {{ sonata_block_render({'type': 'sonata.block.service.template'}, {
                                'template': '@LotgdCore/block/source.html.twig'
                            }) }}
                            <br>
                            {{ lotgd_version }}
                            <br>
                            {{ game_page_gen() }}
                        </td>
                    </tr>
                </table>
            </td>
            <td class="border trt"></td>
        </tr>
        <tr>
            <td class="border blc"></td>
            <td class="border btm"></td>
            <td class="border brc"></td>
        </tr>
    </table>
{% endblock layout_footer %}

{% block layout_navigation %}
    <table class="lotgd table">
        <tr>
            <td class="border tlc"></td>
            <td class="border tm"></td>
            <td class="border trc"></td>
        </tr>
        <tr>
            <td class="border tlt"></td>
            <td class="lotgd top aligned nav">
                <div class="left aligned">{{ knp_menu_render(lotgd_menu, {'currentAsLink': false}) }}</div>
            </td>
            <td class="border trt"></td>
        </tr>
        <tr>
            <td class="border blc"></td>
            <td class="border btm"></td>
            <td class="border brc"></td>
        </tr>
    </table>
{% endblock layout_navigation %}

{% block layout_stats %}
    <table class="lotgd table">
        <tr>
            <td class="border tlc"></td>
            <td class="border tm"></td>
            <td class="border trc"></td>
        </tr>
        <tr>
            <td class="border tlt"></td>
            <td class="top aligned nav left aligned lotgd-text-nowrap">
                {# {{ stats }} #}
                <p>&nbsp;</p>
                {# {{ paypal }} #}
                {{ sonata_block_render({ 'type': 'lotgd.core.template.block.donation.buttons'}) }}
            </td>
            <td class="border trt"></td>
        </tr>
        <tr>
            <td class="border blc"></td>
            <td class="border btm"></td>
            <td class="border brc"></td>
        </tr>
    </table>
{% endblock layout_stats %}
