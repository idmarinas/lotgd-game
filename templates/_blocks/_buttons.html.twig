{# Button for Adminitrators, admin user and petitions #}
{% block admin_petition %}
    {# Show only to administrator that have user edit permits #}
    {% if adminPetition.canEditUsers %}
        <span> | </span>
        <a class="ui tertiary button " href="{{ 'user.php'|lotgd_url }}">{{ 'parts.petition.editUser'|t({}, 'app-default')|colorize }}</a>
    {% endif %}

    {# Show only to administrators that have petitions edit permits #}
    {% if adminPetition.canEditPetitions %}
        <br>
        <a class="ui tertiary button " href='{{ 'viewpetition.php'|lotgd_url }}'>{{ 'parts.petition.admin'|t({}, 'app-default')|colorize }}:</a>
        {{ 'parts.petition.status.05'|t({'n': adminPetition.petitions.5 })|colorize }} <span>|</span>
        {{ 'parts.petition.status.04'|t({'n': adminPetition.petitions.4 })|colorize }} <span>|</span>
        {{ 'parts.petition.status.00'|t({'n': adminPetition.petitions.0 })|colorize }} <span>|</span>
        {{ 'parts.petition.status.01'|t({'n': adminPetition.petitions.1 })|colorize }} <span>|</span>
        {{ 'parts.petition.status.03'|t({'n': adminPetition.petitions.3 })|colorize }} <span>|</span>
        {{ 'parts.petition.status.07'|t({'n': adminPetition.petitions.7 })|colorize }} <span>|</span>
        {{ 'parts.petition.status.06'|t({'n': adminPetition.petitions.6 })|colorize }} <span>|</span>
        {{ 'parts.petition.status.02'|t({'n': adminPetition.petitions.2 })|colorize }}
    {% endif %}
{% endblock admin_petition %}

