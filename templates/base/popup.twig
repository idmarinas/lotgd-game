<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta http-equiv="imagetoolbar" content="false" />
		<meta http-equiv="Window-target" content="_top" />
        <meta name="robots" content="index, follow" />
        {% block head_theme_meta %}{% endblock %}
		{{ metahead }}

		<title>{% block head_theme_title %}{{ page_title(title) }}{% endblock %}</title>

        {{ encore_entry_link_tags('lotgd', null, 'lotgd') }}
        {{ encore_entry_link_tags('semantic_ui', null, 'lotgd') }}
        {% block head_theme_css %}
            {# Favicon can custom per theme #}
            <link rel="shortcut icon" href="favicon.png" type="image/png" />
        {% endblock %}
		{{ csshead }}

        {{ encore_entry_script_tags('lotgd', null, 'lotgd') }}
        {% block head_theme_js %}{% endblock %}
		{{ scripthead }}
        {{ encore_entry_script_tags('semantic_ui', null, 'lotgd') }}
	</head>
	<body>
        {% block body %}
            <table class="lotgd table">
                <tr>
                    <td>
                        <table  class="lotgd table">
                            <tr>
                                <td class="border tlc"></td>
                                <td class="border tm"></td>
                                <td class="border trc"></td>
                            </tr>
                            <tr>
                                <td class="border tlt"></td>
                                <td class="top aligned"><span class='pagetitle'>&#149; {{ page_title(title) }}</span></td>
                                <td class="border trt"></td>
                            </tr>
                            <tr>
                                <td class="border blc"></td>
                                <td class="border btm"></td>
                                <td class="border brc"></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table class="lotgd table">
                            <tr>
                                <td class="border tlc"></td>
                                <td class="border tm"></td>
                                <td class="border trc"></td>
                            </tr>
                            <tr>
                                <td class="border tlt"></td>
                                <td class="top aligned headrow">
                                    {# Show all alert messages #}
                                    {{ show_flash_messages() }}

                                    {# Content of popup #}
                                    {{ content }}
                                </td>
                                <td class="border trt"></td>
                            </tr>
                            <tr>
                                <td class="border blc"></td>
                                <td class="border btm"></td>
                                <td class="border brc"></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table class="lotgd table">
                            <tr>
                                <td class="border tlc"></td>
                                <td class="border tm"></td>
                                <td class="border trc"></td>
                            </tr>
                            <tr>
                                <td class="border tlt"></td>
                                <td class="top aligned">
                                    <table class="lotgd table">
                                        <tr>
                                            <td class="top aligned">{{ game_copyright() }} <br> Design: Jade Template &copy; Josh Canning 2004 of <a href='http://hfs.cjb.net/' target='_blank'>HFS</a></td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="border trt"></td>
                            </tr>
                            <tr>
                                <td class="border blc"></td>
                                <td class="border btm"></td>
                                <td class="border brc"></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        {% endblock %}
	</body>
</html>
