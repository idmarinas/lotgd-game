{% translate_default_domain textDomain %}

{% block armor_list %}
    {{ 'description'|t|colorize }}

    {{ 'tradein'|t({'armorname': user.armor, 'value': tradeinvalue})|colorize }}

    <table class='ui very compact striped selectable table'>
        <thead>
            <tr>
                <th scope="col">{{ 'table.header.name'|t|uncolorize }}</th>
                <th scope="col">{{ 'table.header.defense'|t|uncolorize }}</th>
                <th scope="col">{{ 'table.header.cost'|t|uncolorize }}</th>
            </tr>
        </thead>
        <tbody>
            {% for row in stuff %}
                <tr>
                    <td class="collapsing">
                        {% set color = '`)' %}
                        {% if row.value <= (user.gold + tradeinvalue) %}
                            {% if not unavailable %}
                                {% set color = '`&' %}
                                <a href='{{ ('armor.php?op=buy&id=' ~ row.armorid)|lotgd_url }}'>{{ (color ~ row.armorname ~ '`0')|colorize }}</a>
                            {% else %}
                                {% set color = '`7' %}
                                {{ (color ~ row.armorname ~ '`0')|colorize }}
                            {% endif %}
                        {% else %}
                            {{ (color ~ row.armorname ~ '`0')|colorize }}
                        {% endif %}
                    </td>
                    <td>{{ (color ~ row.defense)|colorize }}</td>
                    <td>
                        {% if row.alternatetext %}
                            {{ (color ~ row.alternatetext)|colorize }}
                        {% else %}
                            {{ (color ~ row.value)|colorize }}
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{{ 'table.notFound'|t|colorize }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock armor_list %}

{% block armor_buy %}
    {% if result %}
        {% if buyIt %}
            {{ 'payarmor'|t({'playerarmor': userPre.armor, 'armorname': result.armorname})|colorize }}
        {% else %}
            {{ 'notenoughgold'|t({'armorname': result.armorname})|colorize }}
        {% endif %}
    {% else %}
        {{ 'nosuchweapon'|t|colorize }}
        {{ 'tryagain'|t|colorize }}
    {% endif %}
{% endblock armor_buy %}
