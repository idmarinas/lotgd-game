        &#149; <a href="{{ ('clan.php?op=detail&clanid=' ~ clan.clanid )|lotgd_url }}">{{ clan.clanname|uncolorize }}</a>
        &#60;{{ clan.clanshort|uncolorize }}&#62;
        ({{ 'section.list.clan.members'|t({ 'n': clan.members })|colorize }}) <br>
