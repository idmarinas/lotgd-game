{% translate_default_domain textDomain %}

{% block graveyard_default %}
    {% if showGraveyardDesc %}
        {{ 'section.default.paragraph'|t({ 'graveyardOwnerName': graveyardOwnerName })|colorize }}

        {% set result = modulehook('graveyard-desc') %}
        {% for message in result %}
            {% if message is array %}
                {{ message[0]|tl(message[1], message[2])|colorize }}
            {% else %}
                {{ message|colorize }}
            {% endif %}
        {% endfor %}
    {% endif %}
{% endblock graveyard_default %}

{% block graveyard_enter %}
    {{ 'section.enter.paragraph'|t({ 'graveyardOwnerName': graveyardOwnerName })|colorize }}

    {% set result = modulehook('mausoleum') %}
    {% for message in result %}
        {{ message[0]|tl(message[1], message[2])|colorize }}
    {% endfor %}
{% endblock graveyard_enter %}

{% block graveyard_haunt %}
    {{ 'section.haunt.paragraph'|t({ 'graveyardOwnerName': graveyardOwnerName })|colorize }}

    <form action="{{ 'graveyard.php?op=haunt2'|lotgd_url }}">
        <div class="field">
            <label for="name">{{ 'section.haunt.form.label.name'|t|colorize }}</label>
            <div class="ui action input">
                <input type="text" name="name" id="name">
                <button class="ui button" type="submit">{{ 'section.haunt.form.button.submit'|t|uncolorize }}</button>
            </div>
        </div>
    </form>
{% endblock graveyard_haunt %}

{% block graveyard_haunt2 %}
    {% set count = characters|length %}

    {% if count %}
        {{ 'section.haunt2.found'|t|colorize }}

        <table class="ui very compact table">
            <thead>
                <tr>
                    <th scope="col">{{ 'section.haunt2.table.thead.name'|t|uncolorize }}</th>
                    <th scope="col">{{ 'section.haunt2.table.thead.level'|t|uncolorize }}</th>
                </tr>
            </thead>
            <tbody>
                {% for char in characters %}
                    <tr>
                        <td><a href="{{ ('graveyard.php?op=haunt3&charid=' ~ char.id)|lorgd_url }}">{{ char.name|colorize }}</a></td>
                        <td>{{ char.level }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        {{ 'section.haunt2.no.result'|t({ 'graveyardOwnerName': graveyardOwnerName })|colorize }}
    {% endif %}
{% endblock graveyard_haunt2 %}

{% block graveyard_haunt3 %}
    {{ 'section.haunt3.subtitle'|t|colorize }}

    {% if haunted is same as(true) %}
        {{ ('section.haunt3.success' ~ rand)|t({ 'name': character.name })|colorize }}
    {% elseif haunted is same as(false) %}
        {{ 'section.haunt3.not.found'|t({ 'graveyardOwnerName': graveyardOwnerName })|colorize }}
    {% elseif haunted == 1 %}
        {% set rand = random(0, 5) %}

        {{ ('section.haunt3.fail.0' ~ rand)|t({ 'name': character.name })|colorize }}
    {% else %}
        {{ 'section.haunt3.haunted'|t({ 'graveyardOwnerName': graveyardOwnerName })|colorize }}
    {% endif %}
{% endblock graveyard_haunt3 %}

{% block graveyard_question %}
    {{ 'section.question.balance'|t({ 'favor': user.deathpower, 'graveyardOwnerName': graveyardOwnerName })|colorize }}

    {% if highest[0] %}
        {{ highest[0]|tl(highest[1], highest[2])|colorize }}
    {% endif %}

    {% if texts[0] %}
        {{ texts[0]|tl(texts[1], texts[2])|colorize }}
    {% endif %}
{% endblock graveyard_question %}

{% block graveyard_restore %}
    {{ 'section.restore.subtitle'|t|colorize }}

    {% if restored is same as(true) %}
        {{ 'section.restore.result.success'|t({ 'graveyardOwnerName': graveyardOwnerName, 'favor': favorToHeal })|colorize }}
    {% elseif restored is same as(false) %}
        {{ 'section.restore.result.fail'|t({ 'graveyardOwnerName': graveyardOwnerName })|colorize }}
    {% else %}
        {{ 'section.restore.result.no.need'|t({ 'graveyardOwnerName': graveyardOwnerName })|colorize }}
    {% endif %}
{% endblock graveyard_restore %}

{% block graveyard_resurrection %}
