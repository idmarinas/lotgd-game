{% translate_default_domain textDomain %}

{% block healer_buy %}
    {% if canHeal is same as(true) %}
        {{ 'section.buy.healed.paragraph'|t|colorize }}

        {% if healCost == newHealCost %}
            {{ 'section.buy.healed.full'|t|colorize }}
        {% else %}
            {{ 'section.buy.healed.partial'|t|colorize }}
        {% endif %}

        {{ 'section.buy.healed.heal'|t({ 'healed': healHealed })|colorize }}
    {% else %}
        {{ 'section.buy.unheal'|t({ 'cost': newHealCost })|colorize }}
    {% endif %}
{% endblock healer_buy %}

{% block healer_companion %}
    {% if canHeal is same as(true) %}
        {{ 'section.companion.heal.success'|t({ 'companionName': companionName })|colorize }}
    {% else %}
        {{ 'section.companion.heal.fail'|t({ 'cost': newHealCost })|colorize }}
    {% endif %}
{% endblock healer_companion %}

{% block healer_default %}
    {% if needHeal is same as(true) %}
        {{ 'section.default.heal.damaged'|t({ 'healCost': healCost })|colorize }}
    {% elseif needHeal is same as(false) %}
        {{ 'section.default.heal.overheal'|t|colorize }}
    {% else %}
        {{ 'section.default.heal.equal'|t|colorize }}
    {% endif %}
{% endblock healer_default %}
