{% translate_default_domain textDomain %}

{% block inn_bartender %}
    {% if 'bribe' == action %}
        {% if type %}
            {% if bribeSuccess %}
                {{ 'section.bartender.bribe.success'|t({ 'barkeep': barkeep })|colorize }}
            {% else %}
                {{ 'section.bartender.bribe.fail'|t({ 'barkeep': barkeep })|colorize }}
            {% endif %}
        {% else %}
            {{ 'section.bartender.bribe.paragraph'|t|colorize }}
        {% endif %}
    {% elseif 'listupstairs' == action %}
        {{ 'section.bartender.listupstairs.paragraph'|t({ 'barkeep': barkeep })|colorize }}

        {{ pvp_list_table({ 'paginator': paginator, 'returnLink': returnLink, 'pvpTimeOut': pvpTimeOut }) }}

        {{ pvp_list_sleepers({ 'sleepers': sleepers }) }}
    {% elseif 'colors' == action %}
        {{ 'section.bartender.colors.paragraph'|t({ 'colors': colors, 'barkeep': barkeep, 'rawInput': testText|prevent_codes, 'formatInput': testText })|colorize }}
        <form action="{{ formUrl|lotgd_url }}" method="POST" autocomplete="off" class="ui form">
            <div class="field">
                <input type="text" id="testText" name="testText">
            </div>
            <div class="field">
                <button type="submit" class="ui button">{{ 'section.bartender.colors.form.button.submit'|t|uncolorize }}</button>
            </div>
        </form>
    {% elseif 'specialty' == action %}
        {% if specialty %}
            {{ 'section.bartender.specialty.changed'|t({ 'barkeep': barkeep })|colorize }}
        {% else %}
            {{ 'section.bartender.specialty.enter'|t({ 'barkeep': barkeep })|colorize }}
        {% endif %}
    {% else %}
        {{ 'section.bartender.default'|t({ 'barkeep': barkeep })|colorize }}
    {% endif %}
{% endblock inn_bartender %}

{% block inn_converse %}
    {{ 'section.converse'|t|colorize }}

    {{ commentary_block({
        'section': 'inn',
        'textDomainStatus': 'app-commentary'
    }, textDomain) }}
{% endblock inn_converse %}

{% block inn_default %}
    {% if showInnDescription %}
        {% if 'strolldown' == op %}
            {{ 'section.default.op.stroll'|t|colorize }}
        {% elseif 'fleedragon' == op %}
            {{ 'section.default.op.flee.dragon'|t({ 'partner': partner })|colorize }}
        {% else %}
            {{ 'section.default.op.default'|t|colorize }}
        {% endif %}

        {{ 'section.default.paragraph'|t({ 'sex': user.sex, 'barkeep': barkeep, 'partner': partner })|colorize }}

        {{ 'section.default.talk'|t({ 'talk': talk[0]|tl(talk[1], talk[2]) })|colorize }}

        {{ 'section.default.clock'|t({ 'gameclock': gameclock })|colorize }}

        {% set result = modulehook('inn-desc') %}
        {% for message in result %}
            {{ message[0]|tl(message[1], message[2])|colorize }}
        {% endfor %}
    {% endif %}
{% endblock inn_default %}

{% block inn_room %}
    {% if boughtRoomToday %}
        {{ 'section.room.bought'|t|colorize }}
    {% else %}
        {{ 'section.room.buy.paragraph0'|t(_context)|colorize }}

        {% if user.goldinbank >= bankExpense and bankExpense != expense %}
            {{ 'section.room.buy.fee.paragraph'|t(_context)|colorize }}
            {{ ('section.room.buy.fee.' ~ (feePercent ? 'percent' : 'amount'))|t((_context)|merge({ 'fee': fee, 'percent': feePercent }))|colorize }}
        {% endif %}

        {{ 'section.room.buy.paragraph1'|t(_context)|colorize }}
    {% endif %}
{% endblock inn_room %}
