{% translate_default_domain textDomain %}

{% block mercenarycamp_buy %}
    {% if companionHire is same as(true) %}
        {{ 'section.buy.success'|t|colorize }}

        {% if companion.jointext %}
            {{ companion.jointext|colorize }}
        {% endif %}
    {% elseif companionHire is same as(false) %}
        {{ 'section.buy.too.many'|t|colorize }}
    {% else %}
        {{ 'section.buy.error'|t|colorize }}
    {% endif %}
{% endblock mercenarycamp_buy %}

{% block mercenarycamp_default %}
    {% if showDescription %}
        {{ 'section.default.description'|t(_context)|colorize }}
    {% endif %}

    {{ 'section.default.mercenary.join'|t({ 'count': companions|length })|colorize }}

    {% for companion in companions %}
        {{ '`#%s`0`n`7%s`0`n`n'|format(companion.name, companion.description)|colorize }}
    {% endfor %}

    {% if companionWounds %}
        {{ 'section.default.mercenary.wounds'|t|colorize }}
    {% endif %}
{% endblock mercenarycamp_default %}

{% block mercenarycamp_heal %}
    {% if companionHealed %}
        {{ 'section.heal.paid'|t({ 'companionName': companionName })|colorize }}
    {% else %}
        {{ 'section.heal.not.enough'|t|colorize }}
    {% endif %}

    <br>

    {% if companionWounds %}
        {{ 'section.default.mercenary.wounds'|t|colorize }}
    {% endif %}
{% endblock mercenarycamp_heal %}
