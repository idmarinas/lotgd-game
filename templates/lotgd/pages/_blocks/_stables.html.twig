{% block stables_confirmbuy %}
    {% if mount %}
        {% if mountBuyed %}
            {% if mountReplace %}

            {% else %}

            {% endif %}
        {% else %}
            {{ 'confirmbuy.no.money'|trans(_context)|colorize }}
        {% endif %}
