        {{ 'section.not.found.beast'|trans(_context)|colorize }}
    {% endif %}
{% endblock stables_confirmbuy %}

{% block stables_confirmsell %}
    {{ 'section.sell.sold'|trans(_context)|colorize }}
{% endblock stables_confirmsell %}

{% block stables_default %}
    {{ 'section.default.description'|trans(_context)|colorize }}

    {% set result = modulehook('stables-desc') %}
    {% for message in result %}
        {{ message[0]|tl(message[1], message[2])|colorize }}
    {% endfor %}
{% endblock stables_default %}

{% block stables_examine %}
    {% if mount %}
        {{ ('section.examine.fineBeast.0' ~ random(0, 3))|trans|colorize }}

        {{ 'section.examine.creature'|trans({
            'name': mount.mountname,
            'description': mount.mountdesc,
            'costGold': mount.mountcostgold,
            'costGems': mount.mountcostgems
        })|colorize }}
    {% else %}
        {{ 'section.not.found.beast'|trans(_context)|colorize }}
    {% endif %}
{% endblock stables_examine %}

{% block stables_feed %}
    {% if allowFeed == 0 %}
        {{ 'section.feed.forbidden'|trans(_context)|colorize }}
    {% elseif haveGold %}
        {% if mountHungry %}
            {% if halfHungry %}
                {{ 'section.feed.hungry.half'|trans(_context)|colorize }}
            {% else %}
                {{ 'section.feed.hungry.hungry'|trans(_context)|colorize }}
            {% endif %}

            {{ 'section.feed.hungry.full'|trans(_context)|colorize }}
        {% else %}
            {{ 'section.feed.not.hungry'|trans(_context)|colorize }}
        {% endif %}
    {% else %}
        {{ 'section.feed.not.gold'|trans(_context)|colorize }}
    {% endif %}
{% endblock stables_feed %}

{% block stables_sellmount %}
    {{ 'section.sell.confirm'|trans(_context)|colorize }}
{% endblock stables_sellmount %}
