{% trans_default_domain textDomain %}

{{ 'section.referers.title'|trans|colorize }}

<table class="ui very simple very compact striped table">
    <thead>
        <tr>
            <th scope="col">{{ 'section.referers.table.thead.name'|trans|colorize }}</th>
            <th scope="col">{{ 'section.referers.table.thead.email'|trans|colorize }}</th>
            <th scope="col">{{ 'section.referers.table.thead.register'|trans|colorize }}</th>
            <th scope="col">{{ 'section.referers.table.thead.awarded'|trans|colorize }}</th>
        </tr>
    </thead>
    {% for refererId, data in paginator %}
        <thead>
            <tr>
                <th scope="col" colspan="4">{{ ('`^' ~ referers[refererId].login ~ '`0')|colorize }} ({{ data|length|numeral }})</th>
            </tr>
        </thead>
        <tbody>
            {% for row in data %}
                <tr>
                    <td>{{ row.login }}</td>
                    <td>{{ row.emailaddress }}</td>
                    <td>{{ '{date,date} {date,time}'|tmf({ 'date': row.regdate }) }}</td>
                    <td>{{ row.refererawarded ? 'section.referers.table.tbody.yes'|trans|colorize : 'section.referers.table.tbody.no'|trans|colorize }}</td>
                </tr>
            {% endfor %}
        </tbody>
    {% else %}
        <tbody>
            <tr>
                <td colspan="4">{{ 'section.referers.table.tbody.not.found'|trans|colorize }}</td>
            </tr>
        </tbody>
    {% endfor %}
</table>
