{% block character_stat_buff %}
    {% trans_default_domain 'partial_sidebar' %}

    <div class="italic bg-gradient-to-r from-transparent via-lotgd-800 border-double text-center font-bold border-t-4 border-b border-lotgd-green-500 py-2 my-2">
        {{ 'character.buff_title'|trans|colorize }}
    </div>

    {% for buff in value %}
        <div>{{ buff|colorize }}</div>
    {% endfor %}

{% endblock character_stat_buff %}

{% block character_stats %}
    {% for title, section in charstat %}
        <div class="italic bg-gradient-to-r from-transparent via-lotgd-800 text-center font-bold border-t first:border-t-0 border-b border-lotgd-500 py-2 my-2 first:mt-0">{{ title }}</div>

        {% for name, value in section %}
            <div class="flex text-sm">
                <div class="w-1/3">
                    <label class="block font-bold text-right pr-1" for="{{ name }}">{{ name }}</label>
                </div>
                <div class="w-2/3" id="{{ name }}">{{ value }}</div>
            </div>
        {% endfor %}
    {% endfor %}

    {{ statbuff}}
{% endblock character_stats %}
