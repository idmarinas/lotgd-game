{% extends 'base.html.twig' %}

{% use '_layout.html.twig' %}

{% block lotgd_body %}
    <div class="container mx-auto">
        {{ block('layout_header') }}
        <div class="gap-1 flex">
            <div class="flex-none w-64">
                {{ block('layout_navigation') }}
                {# Start advertising module #}
                {# {{ google_ad('ad_column_navigation_bottom') }} #}
                {# End advertising module #}
            </div>
            <div class="p-2 flex-grow lotgd-border-image">
                {# Show notifications #}
                {{ show_notifications() }}

                {# Show all alert messages #}
                {{ show_flash_messages() }}

                {# This is all content of game #}
                {% block lotgd_body_content %}{{ content }}{% endblock %}
            </div>
            <div class="flex-none w-72">
                {{ block('layout_stats') }}
            </div>
        </div>
        {{ block('layout_footer') }}
    </div>
{% endblock lotgd_body %}

{% block lotgd_footer_css %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5/css/all.min.css">
{% endblock %}
