{% block dialog %}
    <div class="max-h-screen w-full max-w-4xl relative">
        <div class="m-1 bg-lotgd-900 rounded shadow text-left">
            <div
                class="p-8"
                data-controller="form--submit"
                data-form--submit-url-value="{{ stimulus_url('Lotgd\\Core\\Controller\\PetitionController', 'report') }}"
            >
                {{ block('content') }}
            </div>
        </div>
    </div>
{% endblock dialog %}

{% block content %}
    {% trans_default_domain 'jaxon_petition' %}

    {# Show notifications #}
    {{ show_notifications() }}

    <h2 class="text-xl mb-4 pb-1 font-bold border-b border-lotgd-500">{{ 'title.report'|trans }}</h2>

    <div class="mb-4">
        {{ 'section.report.paragraph'|trans|colorize }}

        {{ form(form) }}

        <br>
        {{ 'section.report.note'|trans|colorize }}
    </div>

    <div class="flex justify-end items-center flex-wrap mt-6 pt-3 border-t border-lotgd-500">
        <button
            type="button"
            class="w-auto bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mr-2"
            data-action="click->form--submit#send"
            data-form--submit-target="activator"
        >
            {{ 'modal.buttons.send'|trans({}, 'app_default') }}
        </button>
        <button
            class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
            data-action="click->mail#close"
        >
            {{ 'modal.buttons.cancel'|trans({}, 'app_default') }}
        </button>
    </div>
{% endblock content %}
