{% use 'page/_blocks/_create.html.twig' %}

{% trans_default_domain textDomain %}

{% if maintenanceMode %}
    <div class="ui centered horizontal card">
        <div class="image">
            <img src="images/logindragon.gif" alt="{{ 'maintenance.server.creation.title'|trans({}, 'app_default')|uncolorize }}">
        </div>
        <div class="content">
            <a class="header">{{ 'maintenance.server.creation.title'|trans({}, 'app_default') }}</a>
            <div class="description">{{ 'maintenance.server.creation.message'|trans({}, 'app_default') }}</div>
        </div>
    </div>
{% elseif not allowCreation %}
    {{ block('create_account_disabled') }}
{% elseif serverFull %}
    {{ block('create_server_full') }}
{% else %}
    {{ block('create_account_create') }}
{% endif %}
